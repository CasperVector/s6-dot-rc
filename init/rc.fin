#!/bin/rc

. /etc/slew/lib/cfg.rc

fn fin {
	echo '* fin: stopping services...'
	if (s6-rc -v2 -t10000 -da change) {
		echo '* fin: services stopped'
	} else {
		echo '! fin: some service(s) failed to stop'
		s6-rc -n 100 -da change
		~ $quiet 1 || sleep 1
	}
}

echo > /dev/console
~ $quiet 1 && fin || { fin >[2=1] | tee /dev/console }

